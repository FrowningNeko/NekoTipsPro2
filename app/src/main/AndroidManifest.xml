<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="angryneko.Nekotipspro" >

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".RepeatingAlarmService"
            android:process=":remote" />
        <receiver
            android:name=".OnBootReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".ServiceEx"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".TipsActivity"
            android:label="@string/title_activity_tips" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>

        <service
            android:name=".LurkingService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <receiver
            android:name=".LurkingNekoDialog"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <activity
            android:name=".LurkingNeko"
            android:label="@string/title_activity_lurking_neko" >
        </activity>

        <service
            android:name=".Tips"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".TimeSetting"
            android:label="@string/title_activity_time_setting" >
        </activity>
    </application>

</manifest>
